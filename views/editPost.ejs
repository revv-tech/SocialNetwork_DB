<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                Create Post
            </h1>
            <form action="/posts/edit/<%=  post.id %>" method="POST">
                <div class="form-group">
                    <h5 for="description">Description</h5>
                    <textarea rowss = "4" id="description" name="description" class="form-control"> <%=  post.text %> </textarea>
                </div>
                <div class="'form-group">
                    <% if (post.is_public) {%>
                        <label>Set your post public?   <input type="checkbox"  name="isPublic" id="isPublic" checked></label>
                    <% } else { %>
                        <label>Set your post public?   <input type="checkbox"  name="isPublic" id="isPublic" unchecked></label>
                    <% } %>
                </div>
                <p></p>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" > Continue </button>
                </div>                          
            </form>
        </div>
        <p></p>
        <a href="/posts/myPosts" class="btn btn-primary btn-block mb-2">Cancel</a>
    </div>
</div>